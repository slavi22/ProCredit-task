{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./DB/db.sqlite;"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "../../../Logging/nlog-${shortdate}.log"
      },
      "logconsole": {
        "type": "ColoredConsole",
        "rowHighlightingRules" : [
          {
            "condition": "level == LogLevel.Debug",
            "foregroundColor": "Black",
            "backgroundColor": "Yellow"
          },
          {
            "condition": "level == LogLevel.Info",
            "foregroundColor": "White",
            "backgroundColor": "Blue"
          },
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "White",
            "backgroundColor": "Red"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "ProCredit_task.*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}
